container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python manage.py migrate"
    leader_only: true
  02_upgrading_setuptools:
    command: "source /opt/python/run/venv/bin/activate && pip install --upgrade setuptools"
  02_upgrading_pip:
    command: "source /opt/python/run/venv/bin/activate && pip install --upgrade pip"
  03_installingpillow:
    command: "source /opt/python/run/venv/bin/activate && pip install --no-cache-dir -I pillow"
  04_installingpythons:
    command: "source /opt/python/run/venv/bin/activate && pip install -r requirements.txt"
  05_chrome:
    command: "Xvfb :1 -screen 0 1280x768x24 &"
  06_export:
    command: "export DISPLAY=:1"
  07_getKey:
    command: "wget https://dl-ssl.google.com/linux/linux_signing_key.pub"
  08_keys:
    command: "sudo rpm –import linux_signing_key.pub"
  09_getRepo:
    command: "sudo nano /etc/yum.repos.d/google-chrome.repo"
  10_install:
    command: "sudo yum -y install google-chrome-stable –skip-broken"
option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: beproject/wsgi.py
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: beproject.settings

packages:
  yum:
    git: []
    libffi-devel: []
    postgresql93-devel: []
    libjpeg-turbo-devel: []
    libxml2-devel: []
    libxslt-devel: []
    Xvfb: []