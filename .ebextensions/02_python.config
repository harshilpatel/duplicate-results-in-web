container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python manage.py migrate"
    leader_only: true
  02_upgrading_setuptools:
    command: "source /opt/python/run/venv/bin/activate && pip install --upgrade setuptools"
  02_upgrading_pip:
    command: "source /opt/python/run/venv/bin/activate && pip install --upgrade pip"
  03_installingpillow:
    command: "source /opt/python/run/venv/bin/activate && pip install --no-cache-dir -I pillow"
  04_installingpythons:
    command: "source /opt/python/run/venv/bin/activate && pip install -r requirements.txt"
  05_chrome:
    command: "Xvfb :1 -screen 0 1280x768x24 &"
  06_export:
    command: "export DISPLAY=:1"
  07:
    command: "wget https://dl.google.com/linux/direct/google-chrome-stable_current_x86_64.rpm"
  08:
    command: "sudo yum install ./google-chrome-stable_current_x86_64.rpm"
  11:
    command: "wget http://vault.centos.org/6.2/os/x86_64/Packages/xorg-x11-server-Xvfb-1.10.4-6.el6.x86_64.rpm"
  12:
    command: "yum yum install xorg-x11-server-Xvfb"

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: beproject/wsgi.py
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: beproject.settings

packages:
  yum:
    git: []
    libffi-devel: []
    postgresql93-devel: []
    libjpeg-turbo-devel: []
    libxml2-devel: []
    libxslt-devel: []